{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["airbnb-base", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off",
        "global-require": "off",
        "no-restricted-globals": "off",
        "no-alert": "off",
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "class-methods-use-this": "off",
        "arrow-body-style": "off"
    }
}